<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBar.Transparent" parent="@style/Widget.AppCompat.ActionBar">
        <item name="displayOptions">showHome</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Condensed" parent="Theme.AppCompat">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:windowTitleSize">34sp</item>
    </style>

    <style name="TextAppearance.Condensed.Small" parent="Theme.AppCompat">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:windowTitleSize">18sp</item>
    </style>

</resources>
